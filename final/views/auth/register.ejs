<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .all {
            position: relative;
            min-height: 100vh;
            display: flex;
            flex-flow: column;
            justify-content: center;
            align-items: center;
        }
        .heading2 {
            padding: 0;
            margin: 0;
            color:  #FF5959;
        }
        span {
            color: #ff8b8b;
        }
        p {
            position: relative;
            margin: 0;
        }
        .form {
            position: relative;
            display: flex;
            flex-flow: column;
            align-items: center;
            margin-top: 30px;
        }
        .register {
            position: relative;
            color: white;
            font-weight: 600;
            margin-top: 15px;
            padding: 5px 12px;
            border: transparent;
            border-radius: 5px;
            background-color: #FF5959;
            transition: all 0.5s ease-in-out;
        }
        .register:hover {
            cursor: pointer;
            background-color: #ff8b8b;
            transition: all 0.5s ease-in-out;
        }
        .login {
            position: relative;
            color: #0077cc;
            border: #0077cc 1px solid;
            padding: 3px 12px;
            transition: all 0.5s ease-in-out;
            border-radius: 5px;
            text-decoration: none;
        }
        .login:hover {
            cursor: pointer;
            color: #0095ff;
            border-color: #0095ff;
            transition: all 0.5s ease-in-out;
        }
        .error {
            position: relative;
            width: 100%;
            height: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f39c12;
            border-radius: 5px;
            margin-bottom: 15px;
        }
        .message {
            position: relative;
            color: white;
            margin-left: 15px;
            margin-right: 15px;
        }
        .close {
            position: relative;
            margin-right: 15px;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="all">
        <h2 class="heading2">REGISTER <span>PAGE</span></h2>
        <p>Insert your credentials below:-</p>
        <form action="/auth/register" method="post" class="form">
            <% if(message !== '') { %>
                <div class="error">
                    <p class="message"><%= message %></p>
                    <p class="close" id="close">X</p>
                </div>
            <% } %>
            <input type="email" name="email" placeholder="Email" required>
            <div style="margin-top:15px">
                <input type="password" name="password" placeholder="Password" required>
                <input type="password" name="passwordConfirm" placeholder="Re-type Password" required>
            </div>
            <div style="margin-top:15px">
                <input type="text" name="firstName" placeholder="Firstname" required>
                <input type="text" name="lastName" placeholder="Lastname" required>
            </div>
            <div>
                <button class="register" type="submit">Register</button>
                <a href="/auth" class="login">Login</a>
            </div>
        </form>
    </div>

    <!-- Custom Script -->
    <script>
        // handle closing of error warning
        document.querySelector('.form').addEventListener('click', event => {
            // get id of close
            let closeID = event.target.id

            // if target id = close, then
            if(closeID === 'close') {
                // remove warning
                document.querySelector('.error').style.display = 'none'
            }
        })
    </script>
</body>
</html>